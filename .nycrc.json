{
  "extends": "@istanbuljs/nyc-config-typescript",
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/*.d.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "tests/**/*",
    "dist/**/*",
    "coverage/**/*"
  ],
  "reporter": ["text", "text-summary", "html", "lcov", "json"],
  "report-dir": "coverage",
  "temp-dir": ".nyc_output",
  "cache": true,
  "check-coverage": true,
  "branches": 80,
  "lines": 80,
  "functions": 80,
  "statements": 80,
  "per-file": true
}
